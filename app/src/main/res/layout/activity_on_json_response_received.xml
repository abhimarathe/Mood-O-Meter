<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_on_json_response_received"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kulhalli.rahul.moodometer_v10.OnJsonResponseReceived">

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/happy_res"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/happy"/>

    <TextView
        android:id="@+id/res_happy_str"
        android:layout_marginTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/happy_res"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginLeft="70dp"
        android:text="HAPPY %"
        />

    <ImageView
        android:id="@+id/neutral_res"
        android:layout_below="@id/happy_res"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/neutral"/>

    <TextView
        android:id="@+id/res_neutral_str"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/neutral_res"
        android:layout_below="@id/res_happy_str"
        android:textColor="@android:color/holo_purple"
        android:layout_marginLeft="70dp"
        android:text="NEUTRAL %"
        />

    <ImageView
        android:id="@+id/sad_res"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/neutral_res"
        android:layout_marginTop="25dp"
        android:background="@drawable/sad"/>

    <TextView
        android:id="@+id/res_sad_str"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/sad_res"
        android:layout_below="@id/res_neutral_str"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginLeft="70dp"
        android:text="SAD %"
        />

</RelativeLayout>
